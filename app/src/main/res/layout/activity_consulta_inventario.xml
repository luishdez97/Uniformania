<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consulta_Inventario">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/background"
        android:orientation="vertical">

        <View
            android:id="@+id/divider11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="78dp"
            android:background="@android:color/white" />

        <View
            android:id="@+id/divider15"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="143dp"
            android:background="@android:color/white" />

        <View
            android:id="@+id/divider12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="260dp"
            android:background="@android:color/white" />

        <View
            android:id="@+id/divider14"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="455dp"
            android:background="@android:color/white" />

        <View
            android:id="@+id/divider16"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="535dp"
            android:background="@android:color/white" />

        <View
            android:id="@+id/divider13"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="380dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="ESCANEAR CÓDIGO"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginTop="85dp"
            android:gravity="center"
            android:text="DIGITE EL CODIGO"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:text="BUSCAR PRODUCTO"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnscan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/barcode"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_busq_producto"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="150dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/buscar_prod"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cod_exist"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="85dp"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textColorLink="@android:color/black"
            android:textCursorDrawable="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="270dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="SELECCIONE LA BODEGA"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:layout_marginTop="385dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="VISUALIZAR EXISTENCIA"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/cmbbodegas"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="right"
            android:layout_marginTop="320dp"
            android:backgroundTint="@color/color_Botones"
            android:dropDownWidth="wrap_content"
            android:foregroundTint="@android:color/white"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnver"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="390dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/mostrar_prod"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/producto"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="460dp"
            android:backgroundTint="@color/Celeste"
            android:gravity="center"
            android:text="DESCRIPCIÓN"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="540dp"
            android:gravity="center"
            android:text="EXISTENCIAS      ="
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/precio"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="540dp"
            android:gravity="center"
            android:textAlignment="inherit"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </FrameLayout>
</RelativeLayout>